<section id="appLogin">
    <form action="/Login/Autentica" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="login" class="col-sm-1 control-label">Login:</label>
            <div class="col-sm-11">
                <input type="text" class="form-control" id="login" name="login" />
            </div>
        </div>
        <div class="form-group">
            <label for="senha" class="col-sm-1 control-label">Senha:</label>
            <div class="col-sm-11">
                <input type="password" class="form-control" id="senha" name="senha" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-11">
                <div class="radio">
                    <label>
                        <input type="radio" name="togglePassword" id="typeSenha" value="verSenha">
                        Ver senha
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="togglePassword" id="typeTexto" value="verTexto" checked>
                        Ocutar senha
                    </label>
                </div>
            </div>
        </div>

        <div class="col-sm-offset-11 col-sm-1">
            <input type="submit" class="btn btn-success" value="Logar" />
        </div>

    </form>
</section>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    (function () {
        "use strict"

        let typeSenha = document.querySelector("#typeSenha");
        let typeTexto = document.querySelector("#typeTexto");
        let inputSenha = document.querySelector("input#senha");
        
        typeTexto.addEventListener('click', function () {
            document.querySelector('input#senha').setAttribute('type', 'password');
        });

        typeSenha.addEventListener('click', function () {
            document.querySelector('input#senha').setAttribute('type', 'text');
        });

    })();
</script>